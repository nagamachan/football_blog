<!DOCTYPE html>
<html>
  <head>
    <title>Football Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__title">
        <%= link_to "Football blog", root_path, class: "header__title--text" %>
      </div>
      <div class="heder__right">
      <% if user_signed_in? %>
          <%= link_to current_user.nickname, user_path(current_user), class: "header__right--btn" %>
          <%= link_to "Post", new_post_path, class: "header__right--btn" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "header__right--btn" %>
        <% else %>
        <%= link_to "Login", new_user_session_path, class: "header__right--btn" %>
        <%= link_to "Sign up", new_user_registration_path, class: "header__right--btn" %>
        <% end %>
      </div>
    </header>
    <div class="contents">
    <%= yield %>
    </div>
  </body>
</html>
